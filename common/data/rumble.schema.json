{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/PirateRumbleData",
    "definitions": {
        "PirateRumbleData": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "units": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Unit"
                    }
                }
            },
            "required": [
                "units"
            ],
            "title": "PirateRumbleData"
        },
        "Unit": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "ability": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Ability"
                    },
                    "minItems": 5,
                    "maxItems": 5
                },
                "id": {
                    "type": "number"
                },
                "pattern": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Pattern"
                    },
                    "minItems": 1
                },
                "special": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Special"
                    },
                    "minItems": 10,
                    "maxItems": 10
                },
                "target": {
                    "$ref": "#/definitions/TargetClass"
                },
                "resilience": {
                    "$ref": "#/definitions/Resilience"
                }
            },
            "required": [
                "ability",
                "id",
                "pattern",
                "special",
                "target"
            ],
            "title": "Unit"
        },
        "Ability": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "effects": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Effect"
                    }
                }
            },
            "required": [
                "effects"
            ],
            "title": "Ability"
        },
        "Condition": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "comparator": {
                    "$ref": "#/definitions/ConditionComparator"
                },
                "stat": {
                    "$ref": "#/definitions/Attribute"
                },
                "type": {
                    "$ref": "#/definitions/ConditionType"
                },
                "count": {
                    "type": "integer"
                }
            },
            "required": [
                "type"
            ],
            "title": "Condition"
        },
        "Pattern": {
            "oneOf": [
                { "$ref": "#/definitions/AttackPattern" },
                { "$ref": "#/definitions/HealPattern" }
            ],
            "title": "Pattern"
        },
        "HealPattern": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "action": {
                    "$ref": "#/definitions/Action"
                },
                "area": {
                    "$ref": "#/definitions/Area"
                },
                "level": {
                    "type": "integer"
                }
            },
            "required": [
                "action",
                "area",
                "level"
            ],
            "title": "HealPattern"
        },
        "AttackPattern": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "action": {
                    "$ref": "#/definitions/Action"
                },
                "type": {
                    "$ref": "#/definitions/PatternType"
                }
            },
            "required": [
                "action",
                "type"
            ],
            "title": "AttackPattern"
        },
        "Resilience": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "attribute": {
                    "$ref": "#/definitions/Attribute"
                },
                "chance": {
                    "type": "integer"
                }
            },
            "required": [
                "attribute",
                "chance"
            ],
            "title": "Resilience"
        },
        "Special": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "cooldown": {
                    "type": "integer"
                },
                "effects": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Effect"
                    }
                }
            },
            "required": [
                "cooldown",
                "effects"
            ],
            "title": "Special"
        },
        "Effect": {
            "type": "object",
            "additionalProperties": { "type": "string" },
            "properties": {
                "attributes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Attribute"
                    }
                },
                "chance": {
                    "type": "integer"
                },
                "duration": {
                    "type": "integer"
                },
                "effect": {
                    "$ref": "#/definitions/EffectEnum"
                },
                "targeting": {
                    "$ref": "#/definitions/Targeting"
                },
                "amount": {
                    "type": "number"
                },
                "level": {
                    "type": "integer"
                },
                "range": {
                    "$ref": "#/definitions/Range"
                },
                "condition": {
                    "$ref": "#/definitions/Condition"
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": { "effect": { "const": "damage" } }
                    },
                    "then": {
                        "properties": {
                            "type": {
                                "$ref": "#/definitions/AttackEffectType"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": { "effect": { "const": "recharge" } }
                    },
                    "then": {
                        "properties": {
                            "type": {
                                "$ref": "#/definitions/RechargeEffectType"
                            }
                        }
                    }
                }
            ], 
            "required": [
                "effect",
                "targeting"
            ],
            "title": "Effect"
        },
        "Range": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "direction": {
                    "$ref": "#/definitions/Direction"
                },
                "size": {
                    "$ref": "#/definitions/Size"
                }
            },
            "required": [
                "direction",
                "size"
            ],
            "title": "Range"
        },
        "Targeting": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "count": {
                    "type": "integer"
                },
                "priority": {
                    "$ref": "#/definitions/TargetingPriority"
                },
                "stat": {
                    "$ref": "#/definitions/Attribute"
                },
                "targets": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/TargetElement"
                    }
                }
            },
            "required": [
                "targets"
            ],
            "title": "Targeting"
        },
        "TargetClass": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "comparator": {
                    "$ref": "#/definitions/TargetingPriority"
                },
                "criteria": {
                    "$ref": "#/definitions/Attribute"
                }
            },
            "required": [
                "criteria"
            ],
            "title": "TargetClass"
        },
        "Attribute": {
            "type": "string",
            "enum": [
                "SPD",
                "ATK",
                "DEF",
                "HP",
                "RCV",
                "Critical Hit",
                "Guard",
                "Accuracy",
                "Blow Away",
                "Special CT",
                "Silence",
                "Provoke",
                "Paralysis",
                "Bind",
                "Movement Bind",
                "near"
            ],
            "title": "Attribute"
        },
        "ConditionComparator": {
            "type": "string",
            "enum": [
                "above",
                "below",
                "remaining",
                "first",
                "after",
                "more",
                "less"
            ],
            "title": "ConditionComparator"
        },
        "ConditionType": {
            "type": "string",
            "enum": [
                "stat",
                "time",
                "crew",
                "enemies",
                "trigger"
            ],
            "title": "ConditionType"
        },
        "EffectEnum": {
            "type": "string",
            "enum": [
                "buff",
                "debuff",
                "hinderance",
                "damage",
                "recharge",
                "boon",
                "penalty"
            ],
            "title": "EffectEnum"
        },
        "TargetElement": {
            "anyOf": [
                {
                    "type": "string",
                    "enum": [
                        "self",
                        "crew",
                        "enemies"
                    ]
                },
                {
                    "type": "string",
                    "enum": [
                        "Fighter",
                        "Slasher",
                        "Shooter",
                        "Striker",
                        "Driven",
                        "Free Spirit",
                        "Cerebral",
                        "Powerhouse"
                    ]
                },
                {
                    "type": "string",
                    "enum": [
                        "[STR]",
                        "[DEX]",
                        "[QCK]",
                        "[PSY]",
                        "[INT]"
                    ]
                }
            ],
            "title": "TargetElement"
        },
        "Action": {
            "type": "string",
            "enum": [
                "attack",
                "heal"
            ],
            "title": "Action"
        },
        "Area": {
            "type": "string",
            "enum": [
                "Self",
                "Small",
                "Large",
                "Medium"
            ],
            "title": "Area"
        },
        "PatternType": {
            "type": "string",
            "enum": [
                "Normal",
                "Power",
                "Full"
            ],
            "title": "PatternType"
        },
        "Direction": {
            "type": "string",
            "enum": [
                "forward",
                "radial",
                "sideways"
            ],
            "title": "Direction"
        },
        "Size": {
            "type": "string",
            "enum": [
                "large",
                "small",
                "medium"
            ],
            "title": "Size"
        },
        "TargetingPriority": {
            "type": "string",
            "enum": [
                "highest",
                "lowest"
            ],
            "title": "TargetingPriority"
        },
        "RechargeEffectType": {
            "type": "string",
            "enum": [
                "fixed",
                "percentage",
                "Special CT",
                "RCV"
            ],
            "title": "RechargeEffectType"
        },
        "AttackEffectType": {
            "type": "string",
            "enum": [
                "fixed",
                "cut",
                "atk",
                "time"
            ],
            "title": "AttackEffectType"
        }
    }
}
